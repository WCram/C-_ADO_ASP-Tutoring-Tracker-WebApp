@*Display Active Tutoring Appointments and End appointment button*@

@helper DisplayActive(List<Appointment> activeList)
    {
        <table id="tutoringTable">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Subject</th>
                <th>Location</th>
                <th>Start</th>
                <th>Finish</th>
            </tr>

            @{
                foreach (Appointment app in activeList)
                {
                    <tr>
                        <td>@app.StudentId</td>
                        <td>@app.StudentName</td>
                        <td>@app.Subject</td>
                        <td>@app.Location</td>
                        <td>@app.Start</td>
                        <td>
                            <form method="post">
                                <input type="submit" name="end" value="@app.Id" />
                            </form>
                        </td>


                    </tr>
                }

            }


        </table>
}

