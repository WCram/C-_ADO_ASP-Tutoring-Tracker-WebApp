@*Display All Tutoring Appointments and Delete appointment button*@

@helper DisplayAllAdmin(List<Appointment> allList)
    {
        <table id="tutoringTable">
            <tr>
                <th>Student Id</th>
                <th>Name</th>
                <th>Subject</th>
